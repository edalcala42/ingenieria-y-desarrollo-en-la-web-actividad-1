<%- include('partials/_header.ejs') %> 

<div class="container mt-5">
    <div class="row">
        <div class="col-md-5">
            <div class="card">
                <div class="card-body">
                    <a href="/" class="btn btn-success">Index</a>
                    <a href="/personajes" class="btn btn-warning">Personajes</a>
                </div>
            </div>
        </div>
    </div>
</div>
<h1>
    Listado de Juegos
</h1>


        
<div class="container">
    
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th class="col-width-1">ID.</th>
                        <th>t√≠tulo</th>
                        <th>consola</th>
                        <th>fecha</th>
                        <th class="col-width-5">acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <% if(data) { %>
                        <% for (var i=0; i < data.length; i++) { %>
                            <tr>
                                <td class="col-width-1"><%= data[i].id %></td>
                                <td class="col-width-2"><%= data[i].titulo %></td>
                                <td class="col-width-3"><%= data[i].consola %></td>
                                <td class="col-width-4"><%= data[i].fecha %></td>
                                <td class="col-width-5">
                                    <a href="/juegos/update/<%= data[i].id %>" class="btn btn-info">Update</a>
                                    <a href="/juegos/delete/<%= data[i].id %>" class="btn btn-danger">Delete</a>
                                </td>
                            </tr>
                        <% } %>
                    <% } %>
                </tbody>
            </table>
      
</div>
    <h2>Agregar nuevo juego</h2>
    <div class="container" >
        <div class="col-md-5">
            <div class="card">
                <div class="card-body">
                    <form action="/juegos/add" method="post">
                        <div class="form-group">
                            <input type="text" name="titulo" placeholder="titulo" class="form-control">
                        </div>
                        <div class="form-group" aria-placeholder="Agregar juego">
                            <input type="text" name="consola" placeholder="consola" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="date" name="fecha" placeholder="fecha" class="form-control">
                        </div>
                        <button type="submit" class="btn btn-primary" style="position: absolute">
                            Guardar juego
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>




