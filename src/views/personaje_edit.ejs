<%- include('partials/_header.ejs') %> 

<div class="container mt-5">
    <div class="row">
        <div class="col-md-5">
            <div class="card">
                <div class="card-body">
                    <form action="/personajes/update/<%= data.id %>" method="post">
                        <div class="form-group">
                            <input type="text" name="nombre" value="<%= data.nombre %>" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="sexo" value="<%= data.sexo %>" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="juegoId" value="<%= data.juegoId %>" class="form-control">
                        </div>
                        <button type="submit" class="btn btn-primary">
                            Actualizar personaje
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('partials/_footer.ejs') %> 